/**
 * @file
 * Implementation of hook_install().
 */
function linkuri_install() {
  drupal_load('module', 'content');
  content_notify('install', 'linkuri');
}

/**
 * Implementation of hook_uninstall().
 */
function linkuri_uninstall() {
  drupal_load('module', 'content');
  content_notify('uninstall', 'linkuri');
}

/**
 * Implementation of hook_enable().
 *
 * Notify content module when this module is enabled.
 */
function linkuri_enable() {
  drupal_load('module', 'content');
  content_notify('enable', 'linkuri');
}

/**
 * Implementation of hook_disable().
 *
 * Notify content module when this module is disabled.
 */
function linkuri_disable() {
  drupal_load('module', 'content');
  content_notify('disable', 'linkuri');
}

