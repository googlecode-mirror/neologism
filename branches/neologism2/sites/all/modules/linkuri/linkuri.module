/**
 * Implementation of hook_content_is_empty().
 */
function linkuri_content_is_empty($item, $field) {
  if (empty($item['title']) && empty($item['uri'])) {
    return TRUE;
  }
  return FALSE;
}

/**
 * Implementation of hook_field().
 */
function linkuri_field($op, &$node, $field, &$items, $teaser, $page) {
  switch ($op) {
    case 'load':
      foreach ($items as $delta => $item) {
        _linkuri_load($items[$delta], $delta);
      }
      break;

    case 'validate':
      $optional_field_found = FALSE;
      foreach($items as $delta => $value) {
        _linkuri_validate($items[$delta],$delta, $field, $node, $optional_field_found);
      }

      if ($field['uri'] == 'optional' && $field['title'] == 'optional' && $field['required'] && !$optional_field_found) {
        form_set_error($field['field_name'] .'][0][title', t('At least one title or URL must be entered.'));
      }
      break;

    case 'presave':
      foreach($items as $delta => $value) {
        _linkuri_process($items[$delta], $delta, $field, $node);
      }
      break;

    case 'sanitize':
      foreach ($items as $delta => $value) {
        _linkuri_sanitize($items[$delta], $delta, $field, $node);
      }
      break;
  }
}

